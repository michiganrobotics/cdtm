---
import MainLayout from '../layouts/MainLayout.astro';
import leadership from '../content/faculty/leadership.json';
import researchFacultyData from '../content/faculty/research-faculty.json';

// Helper function to get border color class based on role
function getBorderColor(role: string): string {
  switch (role) {
    case 'primary': return 'border-dtc-primary';
    case 'secondary': return 'border-dtc-secondary';
    default: return 'border-gray-400';
  }
}

// Helper function to get university background color
function getUniBgColor(shortName: string): string {
  return shortName === 'UM' ? 'bg-umichblue' : 'bg-red-700';
}
---

<MainLayout title="Faculty Researchers - Digital Twin Center">

  <!-- Header -->
  <section class="max-w-6xl mx-auto px-4 py-16">
    <div class="text-center mb-12">
      <h1 class="text-4xl font-bold font-roboto-condensed mb-4">
        Faculty <span class="dtc-primary">Researchers</span>
      </h1>
      <div class="subtitle-double-line-dtc mx-auto mb-6"></div>
      <p class="text-xl text-gray-600 dark:text-gray-300 max-w-4xl mx-auto">
        World-class researchers from leading universities driving innovation in digital twin technologies for manufacturing.
      </p>
    </div>
  </section>

  <!-- Center Leadership -->
  <section class="bg-gray-50 dark:bg-gray-800 py-16">
    <div class="max-w-6xl mx-auto px-4">
      <h2 class="text-3xl font-bold font-roboto-condensed text-center mb-12">
        Center <span class="dtc-primary">Leadership</span>
      </h2>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-16">
        {leadership.universities.map((university) => (
          <div class="surface p-8 rounded-lg">
            <div class="flex items-center gap-4 mb-6">
              <div class={`w-16 h-16 ${getUniBgColor(university.shortName)} rounded-full flex items-center justify-center`}>
                <span class="text-white font-bold text-lg">{university.shortName}</span>
              </div>
              <div>
                <h3 class="text-2xl font-bold dtc-primary">{university.name}</h3>
                <p class="text-gray-600 dark:text-gray-300">{university.location}</p>
              </div>
            </div>

            <div class="space-y-6">
              {university.leaders.map((leader) => (
                <div class={`border-l-4 ${getBorderColor(leader.role)} pl-4`}>
                  <div class="flex items-start gap-4 mb-4">
                    <div class="w-16 h-16 overflow-hidden rounded-full bg-gray-200 flex-shrink-0">
                      <img
                        src={leader.image}
                        alt={leader.name}
                        class="w-full h-full object-cover"
                        onerror={`this.style.display='none'; this.nextElementSibling.style.display='flex';`}
                      />
                      <div
                        class={`w-16 h-16 ${getUniBgColor(university.shortName)} rounded-full flex items-center justify-center text-white font-bold text-sm`}
                        style="display: none;"
                      >
                        {leader.name.split(' ').map(n => n[0]).join('').slice(0, 2)}
                      </div>
                    </div>
                    <div>
                      <h4 class="text-xl font-bold mb-2">{leader.name}</h4>
                      <p class="text-gray-600 dark:text-gray-300 mb-2">{leader.title}</p>
                    </div>
                  </div>
                  <p class="text-sm text-gray-500 dark:text-gray-400 mb-2">
                    {leader.description}
                  </p>
                  <a href={`mailto:${leader.email}`} class="text-dtc-primary hover:underline text-sm">
                    {leader.email}
                  </a>
                </div>
              ))}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Research Faculty -->
  <section class="max-w-6xl mx-auto px-4 py-16">
    <h2 class="text-3xl font-bold font-roboto-condensed text-center mb-12">
      Research <span class="dtc-primary">Faculty</span>
    </h2>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {researchFacultyData.faculty.map((person) => (
        <div class="card-base surface p-6">
          <h3 class="text-xl font-bold text-center mb-2">{person.name}</h3>
          <p class="text-center text-gray-600 dark:text-gray-300 mb-3">{person.university}</p>
          <p class="text-sm text-gray-500 dark:text-gray-400 text-center mb-4">
            Research focus: {person.researchFocus}
          </p>
          <div class="text-center">
            <a href={person.website} target="_blank" class="text-dtc-primary hover:underline text-sm">
              Website
            </a>
          </div>
        </div>
      ))}
    </div>

    <!-- Contact Information -->
    <div class="mt-16 text-center surface-dtc-primary p-8 rounded-lg">
      <h3 class="text-2xl font-bold mb-4">Join Our Research Community</h3>
      <p class="text-lg mb-6">
        Interested in collaborating with our faculty or learning more about our research?
      </p>
      <a href="mailto:dtc-info@umich.edu" class="inline-block bg-white text-dtc-primary px-6 py-3 rounded-lg font-semibold hover:bg-gray-100 transition-colors">
        Contact Us
      </a>
    </div>
  </section>

</MainLayout>
