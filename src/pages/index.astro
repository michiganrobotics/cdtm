---
import MainLayout from '../layouts/MainLayout.astro';
import DTCHero from '../components/DTCHero.astro';
import homepage from '../content/site/homepage.json';

const { kickoff, timeline, researchThrusts, industryBenefits, greaterContext, iucrc } = homepage;
---

<MainLayout title="NSF Center for Digital Twins in Manufacturing">
  <DTCHero />

  <!-- Center Overview -->
  <section class="max-w-6xl mx-auto px-4 py-16">

    <!-- CDTM Overview Image -->
    <div class="text-center mb-16">
      <img src="/dtc/images/CDTM_Overview.png" alt="Center for Digital Twins in Manufacturing Overview"
           class="max-w-full h-auto mx-auto rounded-lg shadow-lg">
    </div>


  <!-- Center Timeline & Kickoff -->
  <section class="bg-gray-50 dark:bg-gray-800 py-16">
    <div class="max-w-6xl mx-auto px-4">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-3xl font-bold font-roboto-condensed mb-6">
            Center <span class="dtc-primary">Kick-off Meeting</span>
          </h2>
          <div class="bg-dtc-primary text-white p-6 rounded-lg mb-6">
            <div class="text-2xl font-bold mb-2">{kickoff.date}</div>
            <div class="text-lg">{kickoff.dateSubtitle}</div>
          </div>
          <p class="text-gray-600 dark:text-gray-300 mb-6">
            {kickoff.description}
          </p>
          <a href={kickoff.buttonUrl} class="inline-block bg-dtc-secondary text-white px-8 py-4 rounded-lg font-bold text-lg hover:bg-opacity-90 hover:shadow-lg transform hover:scale-105 transition-all duration-200 shadow-md">
            {kickoff.buttonText}
          </a>
        </div>

        <div class="surface-dtc-accent p-8 rounded-lg">
          <h3 class="text-2xl font-bold mb-6">{timeline.title}</h3>
          <div class="space-y-4">
            {timeline.events.map((event) => (
              <div class="flex items-center gap-4">
                <div class={`w-4 h-4 ${event.completed ? 'bg-white' : 'bg-yellow-300'} rounded-full`}></div>
                <div>
                  <div class="font-semibold">{event.date}</div>
                  <div class="text-sm opacity-90">{event.description}</div>
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Research Focus Areas -->
  <section class="max-w-6xl mx-auto px-4 py-16">
    <div class="text-center mb-12">
      <h2 class="text-4xl font-bold font-roboto-condensed mb-4">
        Research <span class="dtc-primary">Thrusts</span>
      </h2>
      <div class="subtitle-double-line-dtc mx-auto mb-6"></div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      {researchThrusts.thrusts.map((thrust) => (
        <div class="surface p-8 rounded-lg border-l-4 border-gray-400">
          <h3 class="text-2xl font-bold mb-4">{thrust.title}</h3>
          <p class="text-gray-600 dark:text-gray-300">
            {thrust.description}
          </p>
        </div>
      ))}
    </div>
  </section>

  <!-- Industry Benefits -->
  <section class="max-w-6xl mx-auto px-4 py-16">
    <div class="text-center mb-12">
      <h2 class="text-4xl font-bold font-roboto-condensed mb-4">
        Industry <span class="dtc-primary">Benefits</span>
      </h2>
      <div class="subtitle-double-line-dtc mx-auto mb-6"></div>
    </div>

    <div class="surface p-8 rounded-lg">
      {industryBenefits.paragraphs.map((paragraph, index) => (
        <p class={`text-lg leading-relaxed text-gray-700 dark:text-gray-300 ${index < industryBenefits.paragraphs.length - 1 ? 'mb-6' : ''}`}>
          {paragraph}
        </p>
      ))}
    </div>
  </section>

  <!-- Greater Context -->
  <section class="bg-gray-50 dark:bg-gray-800 py-16">
    <div class="max-w-6xl mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-4xl font-bold font-roboto-condensed mb-4">
          Greater <span class="dtc-primary">Context</span>
        </h2>
        <div class="subtitle-double-line-dtc mx-auto mb-6"></div>
      </div>

      <div class="space-y-8">
        <div class="surface p-8 rounded-lg">
          {greaterContext.paragraphs.map((paragraph, index) => (
            <p class={`text-lg leading-relaxed text-gray-700 dark:text-gray-300 ${index < greaterContext.paragraphs.length - 1 ? 'mb-6' : ''}`}>
              {paragraph}
            </p>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- IUCRC Explanation -->
  <section class="max-w-6xl mx-auto px-4 py-16">
    <div class="surface p-8 rounded-lg border border-gray-200 dark:border-gray-700">
      <h2 class="text-3xl font-bold font-roboto-condensed mb-6 text-center text-gray-800 dark:text-gray-200">
        What is an <span class="dtc-primary">IUCRC</span>?
      </h2>
      <p class="text-lg leading-relaxed text-gray-700 dark:text-gray-300">
        {iucrc.content}
      </p>
    </div>
  </section>

</MainLayout>
