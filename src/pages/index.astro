---
import MainLayout from '../layouts/MainLayout.astro';
import DTCHero from '../components/DTCHero.astro';
import homepage from '../content/site/homepage.json';
import updatesData from '../content/updates/updates.json';

const { kickoff, timeline, researchThrusts, industryBenefits, greaterContext, iucrc } = homepage;
const updates = updatesData.updates;
---

<MainLayout title="NSF Center for Digital Twins in Manufacturing">
  <DTCHero />

  <!-- Updates & Center Overview -->
  <section class="max-w-6xl mx-auto px-4 py-10">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-start">
      <!-- Updates -->
      <div>
        <h2 class="text-2xl font-bold font-roboto-condensed mb-4">Latest Updates</h2>
        <div class="divide-y divide-gray-200 dark:divide-gray-700 surface rounded-lg">
          {updates.map((update) => (
            <div class="px-5 py-3">
              <span class={`text-xs font-semibold uppercase px-2 py-0.5 rounded ${update.type === 'center' ? 'bg-dtc-primary text-white' : 'bg-dtc-secondary text-white'}`}>
                {update.type === 'center' ? 'Center Update' : 'News Mention'}
              </span>
              <div class="mt-1">
                {update.link ? (
                  <a href={update.link} class="text-sm text-gray-800 dark:text-gray-200 hover:dtc-primary transition-colors">
                    {update.heading}
                  </a>
                ) : (
                  <span class="text-sm text-gray-800 dark:text-gray-200">{update.heading}</span>
                )}
              </div>
            </div>
          ))}
        </div>
      </div>

      <!-- CDTM Overview Image -->
      <div class="flex items-center justify-center">
        <img src={`${import.meta.env.BASE_URL}images/CDTM_Overview.png`} alt="Center for Digital Twins in Manufacturing Overview"
             class="max-w-full h-auto rounded-lg shadow-lg">
      </div>
    </div>
  </section>

  <!-- Center Kick-off -->
  <section class="bg-gray-50 dark:bg-gray-800 py-16">
    <div class="max-w-6xl mx-auto px-4">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-3xl font-bold font-roboto-condensed mb-6">
          Center <span class="dtc-primary">Kick-off Meeting</span>
        </h2>
        <div class="bg-dtc-primary text-white p-6 rounded-lg mb-6">
          <div class="text-2xl font-bold mb-2">{kickoff.date}</div>
          <div class="text-lg">{kickoff.dateSubtitle}</div>
        </div>
        <p class="text-gray-600 dark:text-gray-300 mb-6">
          {kickoff.description}
        </p>
        <a href={kickoff.buttonUrl || '#'} class="no-underline inline-block bg-dtc-secondary text-white px-8 py-4 rounded-lg font-bold text-xl hover:bg-opacity-90 hover:shadow-lg transform hover:scale-105 transition-all duration-200 shadow-md">
          {kickoff.buttonText}
        </a>
      </div>
    </div>
  </section>

  <!-- Center Timeline -->
  <section class="py-16">
    <div class="max-w-6xl mx-auto px-4">
      <div class="surface-dtc-accent p-8 rounded-lg max-w-3xl mx-auto">
        <h3 class="text-2xl font-bold mb-6">{timeline.title}</h3>
        <div class="space-y-4">
          {(timeline.events || []).map((event) => (
            <div class="flex items-center gap-4">
              <div class={`w-4 h-4 ${event.completed ? 'bg-white' : 'bg-yellow-300'} rounded-full flex-shrink-0`} aria-hidden="true"></div>
              <div>
                <div class="font-semibold"><span class="sr-only">{event.completed ? 'Completed: ' : 'Upcoming: '}</span>{event.date}</div>
                <div class="text-sm">{event.description}</div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Research Focus Areas -->
  <section class="max-w-6xl mx-auto px-4 py-16">
    <div class="text-center mb-12">
      <h2 class="text-4xl font-bold font-roboto-condensed mb-4">
        Research <span class="dtc-primary">Thrusts</span>
      </h2>
      <div class="subtitle-double-line-dtc mx-auto mb-6" aria-hidden="true"></div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      {(researchThrusts.thrusts || []).map((thrust) => (
        <div class="surface p-8 rounded-lg border-l-4 border-gray-400">
          <h3 class="text-2xl font-bold mb-4">{thrust.title}</h3>
          <p class="text-gray-600 dark:text-gray-300">
            {thrust.description}
          </p>
        </div>
      ))}
    </div>
  </section>

  <!-- Industry Benefits -->
  <section class="max-w-6xl mx-auto px-4 py-16">
    <div class="text-center mb-12">
      <h2 class="text-4xl font-bold font-roboto-condensed mb-4">
        Industry <span class="dtc-primary">Benefits</span>
      </h2>
      <div class="subtitle-double-line-dtc mx-auto mb-6" aria-hidden="true"></div>
    </div>

    <div class="surface p-8 rounded-lg">
      {(industryBenefits.paragraphs || []).map((paragraph, index, arr) => (
        <p class={`text-lg leading-relaxed text-gray-700 dark:text-gray-300 ${index < arr.length - 1 ? 'mb-6' : ''}`}>
          {paragraph}
        </p>
      ))}
    </div>
  </section>

  <!-- Greater Context -->
  <section class="bg-gray-50 dark:bg-gray-800 py-16">
    <div class="max-w-6xl mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-4xl font-bold font-roboto-condensed mb-4">
          Greater <span class="dtc-primary">Context</span>
        </h2>
        <div class="subtitle-double-line-dtc mx-auto mb-6" aria-hidden="true"></div>
      </div>

      <div class="space-y-8">
        <div class="surface p-8 rounded-lg">
          {(greaterContext.paragraphs || []).map((paragraph, index, arr) => (
            <p class={`text-lg leading-relaxed text-gray-700 dark:text-gray-300 ${index < arr.length - 1 ? 'mb-6' : ''}`}>
              {paragraph}
            </p>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- IUCRC Explanation -->
  <section class="max-w-6xl mx-auto px-4 py-16">
    <div class="surface p-8 rounded-lg border border-gray-200 dark:border-gray-700">
      <h2 class="text-3xl font-bold font-roboto-condensed mb-6 text-center text-gray-800 dark:text-gray-200">
        What is an <span class="dtc-primary">IUCRC</span>?
      </h2>
      <p class="text-lg leading-relaxed text-gray-700 dark:text-gray-300">
        {iucrc.content}
      </p>
    </div>
  </section>

</MainLayout>
