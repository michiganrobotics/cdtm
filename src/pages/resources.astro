// Helper function to get background color class
function getBgColor(colorClass: string): string {
  const colors: Record<string, string> = {
    'dtc-primary': 'bg-dtc-primary',
    'dtc-secondary': 'bg-dtc-secondary',
    'dtc-accent': 'bg-dtc-accent',
    'gray-600': 'bg-gray-600'
  };
  return colors[colorClass] || 'bg-gray-600';
}
---

<MainLayout title="Resources - Digital Twin Center">

  <!-- Header -->
  <section class="max-w-6xl mx-auto px-4 py-16">
    <div class="text-center mb-12">
      <h1 class="text-4xl font-bold font-roboto-condensed mb-4">
        Center <span class="dtc-primary">Resources</span>
      </h1>
      <div class="subtitle-double-line-dtc mx-auto mb-6"></div>
      <p class="text-xl text-gray-600 dark:text-gray-300 max-w-4xl mx-auto">
        Access research publications, tools, datasets, and educational materials from the Digital Twin Center.
      </p>
    </div>
  </section>

  <!-- Quick Links -->
  <section class="bg-gray-50 dark:bg-gray-800 py-16">
    <div class="max-w-6xl mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <a href="#publications" class="no-underline card-base surface-dtc-primary p-6 text-center group">
          <div class="text-4xl mb-4">ðŸ“š</div>
          <h3 class="text-xl font-bold mb-2">Publications</h3>
          <p class="text-sm opacity-90">Research papers and articles</p>
        </a>

        <a href="#tools" class="no-underline card-base surface-dtc-secondary p-6 text-center group">
          <div class="text-4xl mb-4">ðŸ“‹</div>
          <h3 class="text-xl font-bold mb-2">Project Resources</h3>
          <p class="text-sm opacity-90">Project summaries and materials</p>
        </a>

        <a href="#documents" class="no-underline card-base surface-dtc-accent p-6 text-center group">
          <div class="text-4xl mb-4">ðŸ“„</div>
          <h3 class="text-xl font-bold mb-2">Documents & Reports</h3>
          <p class="text-sm opacity-90">Official documents and research reports</p>
        </a>

      </div>
    </div>
  </section>


  <!-- Tools & Software Section -->
  <section id="tools" class="py-16">
    <div class="max-w-6xl mx-auto px-4">
      <h2 class="text-3xl font-bold font-roboto-condensed mb-8">
        <span class="dtc-primary">Project</span> Resources
      </h2>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {projectResourcesData.resources.map((resource) => (
          <div class="surface p-6 rounded-lg">
            <div class="flex items-center gap-4 mb-4">
              <div class={`w-12 h-12 ${getBgColor(resource.color)} rounded-lg flex items-center justify-center`}>
                <span class="text-white font-bold">{getIcon(resource.icon)}</span>
              </div>
              <div>
                <h3 class="text-xl font-bold">{resource.title}</h3>
                <p class="text-sm text-gray-500">{resource.subtitle}</p>
              </div>
            </div>
            <p class="text-gray-600 dark:text-gray-300 mb-4">
              {resource.description}
            </p>
            <div class="flex gap-4">
              <a href={resource.url} target="_blank" class="text-dtc-primary hover:underline">{resource.linkText}</a>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Documents & Reports Section -->
  <section id="documents" class="bg-gray-50 dark:bg-gray-800 py-16">
    <div class="max-w-6xl mx-auto px-4">
    <h2 class="text-3xl font-bold font-roboto-condensed mb-8">
      <span class="dtc-primary">Documents</span> & Reports
    </h2>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {documentsData.documents.map((doc) => (
        <div class="surface p-6 rounded-lg">
          <h3 class="text-xl font-bold mb-3">{doc.title}</h3>
          <p class="text-gray-600 dark:text-gray-300 mb-4">
            {doc.description}
          </p>
          <a href={doc.url} class="text-dtc-primary hover:underline">{doc.linkText}</a>
        </div>
      ))}
    </div>
    </div>
  </section>


  <!-- Publications Section -->
  <section id="publications" class="max-w-6xl mx-auto px-4 py-16">
    <h2 class="text-3xl font-bold font-roboto-condensed mb-8">
      <span class="dtc-primary">Publications</span> & Research
    </h2>

    <div class="space-y-6">
      {publicationsData.publications.map((pub) => (
        <div class={`surface p-6 rounded-lg border-l-4 ${pub.featured ? 'border-dtc-primary' : 'border-gray-400'}`}>
          <h3 class="text-xl font-bold mb-2">{pub.title}</h3>
          <p class="text-sm text-gray-500 dark:text-gray-400 mb-2 italic">
            {pub.authors}
          </p>
          <p class="text-gray-600 dark:text-gray-300 mb-3">
            {pub.abstract}
          </p>
          <div class="flex flex-wrap gap-4 text-sm">
            {pub.tags.map((tag) => (
              <span class={`${tag.includes('Joint work') ? 'bg-dtc-primary' : 'bg-gray-600'} text-white px-3 py-1 rounded-full`}>{tag}</span>
            ))}
            <span class="text-gray-500">{pub.date}</span>
            <a href={pub.url} target="_blank" class="text-dtc-primary hover:underline">View Paper</a>
          </div>
        </div>
      ))}
    </div>
  </section>

  <!-- Contact Section -->
  <section class="max-w-6xl mx-auto px-4 py-16">
    <div class="text-center surface-dtc-primary p-8 rounded-lg">
      <h3 class="text-2xl font-bold mb-4">Need Additional Resources?</h3>
      <p class="text-lg mb-6">
        Can't find what you're looking for? Contact our team for assistance with research materials and collaborations.
      </p>
      <a href="mailto:dtc-resources@umich.edu" class="inline-block bg-white text-dtc-primary px-6 py-3 rounded-lg font-semibold hover:bg-gray-100 transition-colors">
        Contact Resource Team
      </a>
    </div>
  </section>

</MainLayout>
