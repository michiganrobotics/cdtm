---
import MainLayout from '../layouts/MainLayout.astro';
import publicationsData from '../content/resources/publications.json';
import projectResourcesData from '../content/resources/project-resources.json';
import documentsData from '../content/resources/documents.json';

---

<MainLayout title="Resources - Digital Twin Center">

  <!-- Header -->
  <section class="max-w-6xl mx-auto px-4 py-16">
    <div class="text-center mb-12">
      <h1 class="text-4xl font-bold font-roboto-condensed mb-4">
        Center <span class="dtc-primary">Resources</span>
      </h1>
      <div class="subtitle-double-line-dtc mx-auto mb-6" aria-hidden="true"></div>
      <p class="text-xl text-gray-600 dark:text-gray-300 max-w-4xl mx-auto">
        Access research publications, tools, datasets, and educational materials from the Digital Twin Center.
      </p>
    </div>
  </section>

  <!-- Quick Links -->
  <section class="bg-gray-50 dark:bg-gray-800 py-16">
    <div class="max-w-6xl mx-auto px-4">
      <h2 class="sr-only">Quick Links</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <a href="#publications" class="no-underline card-base surface p-6 text-center group border-t-4 border-dtc-primary hover:shadow-lg transition-shadow">
          <div class="text-4xl mb-4" aria-hidden="true">ðŸ“š</div>
          <span class="text-xl font-bold block mb-2">Publications</span>
          <p class="text-sm text-gray-600 dark:text-gray-300">Research papers and articles</p>
        </a>

        <a href="#tools" class="no-underline card-base surface p-6 text-center group border-t-4 border-[var(--color-dtc-secondary)] hover:shadow-lg transition-shadow">
          <div class="text-4xl mb-4" aria-hidden="true">ðŸ“‹</div>
          <span class="text-xl font-bold block mb-2">Project Resources</span>
          <p class="text-sm text-gray-600 dark:text-gray-300">Project summaries and materials</p>
        </a>

        <a href="#documents" class="no-underline card-base surface p-6 text-center group border-t-4 border-[var(--color-dtc-accent)] hover:shadow-lg transition-shadow">
          <div class="text-4xl mb-4" aria-hidden="true">ðŸ“„</div>
          <span class="text-xl font-bold block mb-2">Documents & Reports</span>
          <p class="text-sm text-gray-600 dark:text-gray-300">Official documents and research reports</p>
        </a>

      </div>
    </div>
  </section>


  <!-- Project Resources Section -->
  <section id="tools" class="py-16">
    <div class="max-w-6xl mx-auto px-4">
      <h2 class="text-3xl font-bold font-roboto-condensed mb-8">
        <span class="dtc-primary">Project</span> Resources
      </h2>

      <ul class="surface rounded-lg divide-y divide-gray-200 dark:divide-gray-700">
        {(projectResourcesData.resources || []).map((resource) => (
          <li class="px-6 py-4 flex items-center justify-between">
            <div>
              <span class="font-semibold">{resource.title}</span>
              <span class="text-sm text-gray-500 dark:text-gray-400 ml-2">{resource.subtitle}</span>
            </div>
            {resource.url && (
              <a href={resource.url} target="_blank" rel="noopener noreferrer" class="text-dtc-primary hover:underline text-sm whitespace-nowrap ml-4">
                {resource.linkText || 'View'}<span class="sr-only"> (opens in new tab)</span>
              </a>
            )}
          </li>
        ))}
      </ul>
    </div>
  </section>

  <!-- Documents & Reports Section -->
  <section id="documents" class="bg-gray-50 dark:bg-gray-800 py-16">
    <div class="max-w-6xl mx-auto px-4">
    <h2 class="text-3xl font-bold font-roboto-condensed mb-8">
      <span class="dtc-primary">Documents</span> & Reports
    </h2>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {(documentsData.documents || []).map((doc) => (
        <div class="surface p-6 rounded-lg">
          <h3 class="text-xl font-bold mb-3">{doc.title}</h3>
          <p class="text-gray-600 dark:text-gray-300 mb-4">
            {doc.description}
          </p>
          {doc.url && <a href={doc.url} class="text-dtc-primary hover:underline">{doc.linkText || 'View'}</a>}
        </div>
      ))}
    </div>
    </div>
  </section>


  <!-- Publications Section -->
  <section id="publications" class="max-w-6xl mx-auto px-4 py-16">
    <h2 class="text-3xl font-bold font-roboto-condensed mb-8">
      <span class="dtc-primary">Publications</span> & Research
    </h2>

    <div class="space-y-6">
      {(publicationsData.publications || []).map((pub) => (
        <div class={`surface p-6 rounded-lg border-l-4 ${pub.featured ? 'border-dtc-primary' : 'border-gray-400'}`}>
          <h3 class="text-xl font-bold mb-2">{pub.title}</h3>
          <p class="text-sm text-gray-500 dark:text-gray-400 mb-2 italic">
            {pub.authors}
          </p>
          <p class="text-gray-600 dark:text-gray-300 mb-3">
            {pub.abstract}
          </p>
          <div class="flex flex-wrap gap-4 text-sm">
            {(pub.tags || []).map((tag) => (
              <span class={`${tag.includes('Joint work') ? 'bg-dtc-primary' : 'bg-gray-600'} text-white px-3 py-1 rounded-full`}>{tag}</span>
            ))}
            <span class="text-gray-500">{pub.date}</span>
            {pub.url && <a href={pub.url} target="_blank" rel="noopener noreferrer" class="text-dtc-primary hover:underline">View Paper<span class="sr-only"> (opens in new tab)</span></a>}
          </div>
        </div>
      ))}
    </div>
  </section>

  <!-- Contact Section -->
  <section class="max-w-6xl mx-auto px-4 py-16">
    <div class="text-center surface-dtc-primary p-8 rounded-lg">
      <h2 class="text-2xl font-bold mb-4">Need Additional Resources?</h2>
      <p class="text-lg mb-6">
        Can't find what you're looking for? Contact our team for assistance with research materials and collaborations.
      </p>
      <a href="mailto:cdtm-iucrc@umich.edu" class="inline-block bg-white text-dtc-primary px-6 py-3 rounded-lg font-semibold hover:bg-gray-100 transition-colors">
        Contact Resource Team
      </a>
    </div>
  </section>

</MainLayout>
