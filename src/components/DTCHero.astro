---
import homepage from '../content/site/homepage.json';
const hero = {
  titleHighlight: '',
  titleMain: '',
  subtitle: '',
  description: '',
  ...homepage.hero,
};
---

<section class="relative overflow-hidden" aria-labelledby="hero-heading">
  <div class="relative min-h-[500px] md:min-h-[600px] flex items-center justify-center">

    <!-- Background layers -->
    <div class="absolute inset-0" aria-hidden="true">
      <!-- Base gradient -->
      <div class="absolute inset-0 bg-gradient-to-br from-umichblue from-20% via-dtc-accent via-60% to-[#1a3a5f]"></div>

      <!-- Network pattern overlay -->
      <div class="absolute inset-0 opacity-20">
        <svg width="100%" height="100%" xmlns="http://www.w3.org/2000/svg" style="display:block;">
          <defs>
            <pattern id="dtcNetwork" width="120" height="120" patternUnits="userSpaceOnUse">
              <!-- Grid lines -->
              <line x1="0" y1="60" x2="120" y2="60" stroke="#ffffff" stroke-opacity="0.08" stroke-width="0.5"/>
              <line x1="60" y1="0" x2="60" y2="120" stroke="#ffffff" stroke-opacity="0.08" stroke-width="0.5"/>

              <!-- Diagonal connectors -->
              <line x1="0" y1="0" x2="60" y2="60" stroke="#ffffff" stroke-opacity="0.15" stroke-width="0.5"/>
              <line x1="120" y1="0" x2="60" y2="60" stroke="#ffffff" stroke-opacity="0.15" stroke-width="0.5"/>
              <line x1="60" y1="60" x2="0" y2="120" stroke="#ffffff" stroke-opacity="0.1" stroke-width="0.5"/>
              <line x1="60" y1="60" x2="120" y2="120" stroke="#ffffff" stroke-opacity="0.1" stroke-width="0.5"/>

              <!-- Primary node (center) -->
              <circle cx="60" cy="60" r="3" fill="none" stroke="#ffffff" stroke-opacity="0.25" stroke-width="1"/>
              <circle cx="60" cy="60" r="1.5" fill="#ffffff" fill-opacity="0.2"/>

              <!-- Corner nodes -->
              <circle cx="0" cy="0" r="2" fill="none" stroke="#ffffff" stroke-opacity="0.15" stroke-width="0.5"/>
              <circle cx="0" cy="0" r="1" fill="#ffffff" fill-opacity="0.12"/>
              <circle cx="120" cy="0" r="2" fill="none" stroke="#ffffff" stroke-opacity="0.15" stroke-width="0.5"/>
              <circle cx="120" cy="0" r="1" fill="#ffffff" fill-opacity="0.12"/>
              <circle cx="0" cy="120" r="2" fill="none" stroke="#ffffff" stroke-opacity="0.15" stroke-width="0.5"/>
              <circle cx="0" cy="120" r="1" fill="#ffffff" fill-opacity="0.12"/>
              <circle cx="120" cy="120" r="2" fill="none" stroke="#ffffff" stroke-opacity="0.15" stroke-width="0.5"/>
              <circle cx="120" cy="120" r="1" fill="#ffffff" fill-opacity="0.12"/>

              <!-- Mid-edge nodes -->
              <rect x="58" y="0" width="4" height="4" rx="0.5" fill="none" stroke="#ffffff" stroke-opacity="0.12" stroke-width="0.5" transform="rotate(45, 60, 2)"/>
              <rect x="0" y="58" width="4" height="4" rx="0.5" fill="none" stroke="#ffffff" stroke-opacity="0.12" stroke-width="0.5" transform="rotate(45, 2, 60)"/>

              <!-- Data flow dots -->
              <circle cx="30" cy="30" r="0.8" fill="#ffffff" fill-opacity="0.18"/>
              <circle cx="90" cy="30" r="0.8" fill="#ffffff" fill-opacity="0.18"/>
              <circle cx="30" cy="90" r="0.8" fill="#ffffff" fill-opacity="0.14"/>
              <circle cx="90" cy="90" r="0.8" fill="#ffffff" fill-opacity="0.14"/>
            </pattern>
          </defs>
          <rect width="100%" height="100%" fill="url(#dtcNetwork)"/>
        </svg>
      </div>

      <!-- Vignette overlay for depth -->
      <div class="absolute inset-0" style="background: radial-gradient(ellipse at center, transparent 30%, rgba(0,39,76,0.5) 100%)"></div>
    </div>

    <!-- Content -->
    <div class="relative z-10 text-center px-4 sm:px-6 lg:px-8 py-16 max-w-4xl mx-auto">
      <h1 id="hero-heading" class="text-4xl sm:text-5xl md:text-6xl text-white font-roboto-condensed font-bold mb-6 hero-animate">
        <span class="text-maize">{hero.titleHighlight}</span>{hero.titleMain ? ` ${hero.titleMain}` : ''}<br />
        {hero.subtitle}
      </h1>

      {hero.description && (
        <p class="text-lg md:text-xl text-gray-200 font-light max-w-2xl mx-auto mb-10 hero-animate" style="animation-delay: 0.1s">
          {hero.description}
        </p>
      )}

      <!-- CTAs -->
      {(hero.primaryButtonText || hero.secondaryButtonText) && (
        <div class="flex flex-col sm:flex-row items-center justify-center gap-4 hero-animate" style="animation-delay: 0.2s">
          {hero.primaryButtonText && (
            <a href={hero.primaryButtonUrl || '#'}
               class="no-underline inline-flex items-center gap-2 bg-dtc-primary text-white px-8 py-4 rounded-lg font-bold text-lg shadow-lg hover:shadow-xl transform hover:scale-105 transition-all duration-200"
               style="background-color: #D86018;">
              {hero.primaryButtonText}
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
              </svg>
            </a>
          )}
          {hero.secondaryButtonText && (
            <a href={hero.secondaryButtonUrl || '#'}
               class="no-underline text-gray-200 hover:text-white font-medium transition-colors border border-white/30 px-6 py-3 rounded-lg hover:border-white/60">
              {hero.secondaryButtonText}
            </a>
          )}
        </div>
      )}
    </div>
  </div>
</section>
